{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:game",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:game"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v",
          "endsPattern": "ready in"
        }
      }
    },
    {
      "label": "Terminate task",
      "type": "process",
      "command": "${command:workbench.action.terminal.kill}",
    }
  ]
}
