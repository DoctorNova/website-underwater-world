{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "ready|compiled successfully|running at"
        }
      }
    },
    {
      "label": "Terminate task",
      "type": "process",
      "command": "${command:workbench.action.terminal.kill}",
    }
  ]
}